# Neovim
abbr -a -- v nvim
abbr -a -- vi nvim
abbr -a -- vim nvim

# Git
abbr -a -- g git
abbr -a -- ga 'git add'
abbr -a --set-cursor='%' -- gcm 'git commit -m "%"'
abbr -a --set-cursor='%' -- gcma 'git commit -am "%"'
abbr -a -- gco 'git checkout'
abbr -a -- gs 'git status'
abbr -a -- gd 'git diff'
abbr -a -- gps 'git push'
abbr -a -- gpl 'git pull'

