abbr -a -- v nvim
abbr -a -- vi nvim
abbr -a -- vim nvim

# Git
abbr -a -- g git
abbr -a -- gco 'git checkout'
abbr -a -- ga 'git add'
abbr -a -- gs 'git status'
abbr -a -- gd 'git diff'
abbr -a --set-cursor='%' -- gci 'git commit -m "%"'
abbr -a --set-cursor='%' -- gcia 'git commit -am "%"'

